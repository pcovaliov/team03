@model PagedList.IPagedList<Twitter.Models.UserModel>
@using PagedList.Mvc;
<link href="~/Content/Menu.css" rel="stylesheet" type="text/css" />
<script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>

<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
@{
    ViewBag.Title = "DisplayUsers";
}
<body style="background-color: #001933; width: 100%; height: 100%;">
    <div style="width: 1000px; margin: auto; background-color:#E0E0E0; height: 100vh;">
        <div id='cssmenu'>
            <ul>
                <li class='active'><a href="@Url.Action("Index", "Home")"><span>Home</span></a></li>
                <li><a href="@Url.Action("Register", "User")"><span>Register</span></a></li>
                <li><a href="@Url.Action("Login", "User")"><span>Login</span></a></li>
                <li><a href="@Url.Action("Message", "Tweet")"><span>Tweets</span></a></li>
                <li><a href="@Url.Action("DisplayUsers", "User")"><span>All Users</span></a></li>
                <li class='last'><a href="@Url.Action("SignOut", "User")"><span>Sign Out</span></a></li>
                <li>Hello, @Session["LogedName"].ToString()</li>
            </ul>
        </div>


        <br>
        <br>

        <div align="center">
            <table class="table">
                <tr>
                    <th>First Name
                    </th>
                    <th>Last name
                    </th>
                    <th>Email
                    </th>
                    <th>
                        Action
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <img src="~/Content/images/@Html.DisplayFor(modelItem => item.Avatar)" width="50px" height="50px">
                            </td>
                        <td id="TableRow">
                            @if (Session["AreAdmin"].ToString() == "Yes")
                            {
                                @Html.ActionLink("Edit | ", "Edit", new { item = item.IdUser });                       
                                @Html.ActionLink("Delete", "Delete", new { item = item.IdUser });
                            }
                            else
                            {
                                @Html.ActionLink("Edit | ", "Edit", new { item = item.IdUser }, new { onclick = "javascript:return false;" });
                                @Html.ActionLink("Delete", "Delete", new { item = item.IdUser }, new { onclick = "javascript:return false;" });
                            }


                        </td>
                    </tr>
                }

            </table>
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            from @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("DisplayUsers", new { page }))
        </div>
    </div>
</body>
