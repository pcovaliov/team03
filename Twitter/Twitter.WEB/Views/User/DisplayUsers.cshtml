@model PagedList.IPagedList<Twitter.Model.UserModel>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "DisplayUsers";
}

<h2>DisplayUsers</h2>


<table>
    <tr>      
        <th>
            First Name
        </th>
        <th>
           Last name
        </th>
        <th>
            Email
        </th>      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
               
        <td>
            @Html.ActionLink("Edit", "Edit", new { item = item.IdUser}) |
            @Html.ActionLink("Delete", "Delete", new { item = item.IdUser })
        </td>
    </tr>
}

</table>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) 
from @Model.PageCount
 
@Html.PagedListPager(Model, page => Url.Action("DisplayUsers",  new { page }))
